    "@microsoft/api-documenter": "^7.12.1",
    "@microsoft/api-extractor": "^7.12.1",
    "husky": "^4.2.3",
    "tsdx": "^0.14.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
